<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="product"
            type="nl.coolblue.mobile.data.models.ProductModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/list_item_member_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="2dp"
        app:contentPaddingTop="10dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                app:imageUrl="@{product.productImageUrl}"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:id="@+id/contentHolder"
                android:layout_alignTop="@id/product_img"
                android:layout_toEndOf="@id/product_img"
                android:layout_toRightOf="@id/product_img">

                <TextView
                    android:id="@+id/list_item_auction_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{product.productName}"/>

                <TextView
                    android:id="@+id/product_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{product.productCategory}"/>

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{product.productPrice}"/>

            </LinearLayout>

            <Button
                android:id="@+id/list_item_auction_button_note"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/button_note"
                android:layout_below="@id/contentHolder"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:background="@drawable/background_button_note"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>